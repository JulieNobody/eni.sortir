<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sortir{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    <link rel="icon" href="{{ asset('img/favicon.png') }}">
    {% block stylesheets %}{% endblock %}
</head>

<body>
<header>
    <div>
        <a href="{{path('accueil') }}" title="Sortir | Accueil">
            <img src="{{ asset('img/logo.png') }}" alt="logo_sortir">
            <p>Sortir</p>
        </a>
    </div>

    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <nav >
            <ul>
                <li>
                    {%if(app.user) %}
                        <strong>{{ app.user.username }}</strong>, le
                        {{ "now"|date("m/d/Y") }}
                    {% endif %}
                </li>
                <li><a href="{{path('accueil') }}" title="Sortir | Accueil">Accueil</a></li>
                <li><a href="{{path('main_aVenir') }}" title="Sortir | Mon profil">Mon profil</a></li>
                <li><a href="{{path('user_logout') }}" title="Sortir | Déconnexion">Déconnexion</a></li>
            </ul>
        </nav>
    {% else %}
    {% endif %}

</header>
<main>
    <div>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div {{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block body %}{% endblock %}

</main>

{% block javascripts %}{% endblock %}

<footer>
    <p>©J.Ducourneau & P.Thomas - Application web d'organisation de sorties - {{ "now" | date('Y') }}</p>
</footer>


</body>


</html>
{% extends 'base.html.twig' %}
{% block title %}Sortir | Détail profil{% endblock %}

{% block body %}
    <h1>Détail profil :</h1>

    <div>
        <ul>
            <li>Nom : {{ user.nom }}</li>
            <li>Prénom : {{ user.prenom }}</li>
            <li>Pseudo : {{ user.username }}</li>
            <li>Campus : en cours</li>
            <li>Téléphone : {{ user.telephone }}</li>
